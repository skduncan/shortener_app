<%= form_for(@shortlink, url: yield(:form_path)) do |f| %>
  <%= render 'shared/error_messages' %>
    
  <%= f.label :shorturl %>
  <%= f.text_field :shorturl, class: 'form-control' %>
      
  <%= f.label :longurl %>
  <%= f.text_field :longurl, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>