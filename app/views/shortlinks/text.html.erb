<% provide(:title, 'Message Shortlink') %>
<% provide(:button_text, 'Send Message') %>
<% provide(:form_path, text_path) %>

<h1>Message shortlink</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :phonenumber, url: yield(:form_path)  do |f| %>
        <%= f.hidden_field :id, :value => @shortlink.id %>
    
        <%= f.label 'Phone Number (Format should be in 0123456789)' %>
        <%= f.text_field :phone, class: 'form-control', :pattern => '\d{10}' %>
        
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>  
  </div>
</div>